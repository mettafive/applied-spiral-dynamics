# Database (Required)
# Get a PostgreSQL connection string from Vercel, Supabase, Neon, etc.
POSTGRES_URL=postgresql://user:password@localhost:5432/spiral_dynamics

# AI Provider (Required)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Authentication (Required)
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-secret-here-generate-with-openssl

# Vector Database (Optional - enables RAG context)
# If not provided, system works but without belief history retrieval
CHROMA_URL=http://localhost:8000
CHROMA_API_KEY=

# Distributed Cache (Optional - required for production multi-instance)
# Use Redis, Upstash, or similar. In-memory cache works for single instance.
REDIS_URL=

# Environment
NODE_ENV=development

# Vercel (auto-populated in deployment)
VERCEL=
VERCEL_URL=

